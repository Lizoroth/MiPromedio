<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/numbers"
    android:orientation="vertical"
    tools:context=".PrincipalPro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#dcffffff"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_titulo"
            android:textSize="40sp"
            android:textColor="#c70d0d0d"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#64ffffff"
        >


        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/calculator"
            android:contentDescription="@string/app_lbl9" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageViewconf"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/management"
                android:contentDescription="@string/app_lbl9"
                android:layout_marginStart="20dp" />

            <ImageView
                android:id="@+id/btn_notas"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/notebook"
                android:contentDescription="@string/app_lbl9"
                android:layout_marginStart="60dp" />


        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>